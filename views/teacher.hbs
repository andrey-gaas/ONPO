<div id="teacher">
  <div class="container">
    <div class="paper">
      <div class="info-container">
        <div class="img_block" style="background-image: url('/image/teacher/{{teacher.img}}');">
          <img src="/image/teacher/{{teacher.img}}" alt="{{title}}" class="info__photo" />
        </div>
        <div class="info__description">
          <div class="fullname">
            <div class="surname">{{teacher.surname}}</div>
            <div class="name">{{teacher.name}} {{teacher.middlename}}</div>
          </div>
          
          <ul class="courses">
            {{#each teacher.course}}
              <li>
                <a href="/course/{{this.href}}" class="course">{{this.title}}</a>
              </li>
            {{/each}}
          </ul>

          <div class="info_laptop info">
          <div>
            <strong>Образование</strong> - {{teacher.education}}
          </div>
          {{#if teacher.academic}}
            <div>
              <strong>Ученая степень</strong> - {{teacher.academic}}
            </div>
          {{/if}}
          <div>
            <strong>Квалификация</strong> - {{teacher.qualification}}
          </div>
          <div>
            <strong>Общий стаж работы / по специальности</strong> - {{teacher.experience}}
          </div>
          <div>
            <strong>Должность</strong> - {{teacher.position}}
          </div>
        </div>
        </div>
        <div class="info_mobile info">
          <div>
            <strong>Образование</strong> - {{teacher.education}}
          </div>
          {{#if teacher.academic}}
            <div>
              <strong>Ученая степень</strong> - {{teacher.academic}}
            </div>
          {{/if}}
          <div>
            <strong>Квалификация</strong> - {{teacher.qualification}}
          </div>
          <div>
            <strong>Общий стаж работы / по специальности</strong> - {{teacher.experience}}
          </div>
          <div>
            <strong>Должность</strong> - {{teacher.position}}
          </div>
        </div>
      </div>
      <div class="description">
        <div class="direction_training">
          <h2 class="title">
            Наименование направления подготовки и (или) специальности
          </h2>
          <ul class="list">
            {{#each teacher.directionTraining}}
            <li class="list_item">
              <span class="index">
                {{addOne @index}}
              </span>
              <span class="text">
                {{this}}
              </span>
            </li>
            {{/each}}
          </ul>
        </div>
        <div class="direction_training">
          <h2 class="title">
            Повышение квалификации и профессиональная переподготовка
          </h2>
          <ul class="list">
            {{#each teacher.retraining}}
            <li class="list_item">
              <span class="index">
                {{addOne @index}}
              </span>
              <span class="text">
                {{this}}
              </span>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <button onclick="history.back();" id="button_back" class="button">
      <svg width="16" height="22" viewBox="0 0 16 22" xmlns="http://www.w3.org/2000/svg">
        <path d="M2.13388 8.80055C1.64573 9.28871 0.854272 9.28871 0.366116 8.80055C-0.122039 8.3124 -0.122039 7.52094 0.366117 7.03278L7.03278 0.366117C7.52094 -0.122039 8.3124 -0.122039 8.80055 0.366117L15.4672 7.03278C15.9554 7.52094 15.9554 8.3124 15.4672 8.80055C14.9791 9.28871 14.1876 9.28871 13.6994 8.80055L9.16667 4.26777L9.16666 20.4167C9.16666 21.107 8.60702 21.6667 7.91667 21.6667C7.22631 21.6667 6.66667 21.107 6.66667 20.4167L6.66667 4.26777L2.13388 8.80055Z"/>
      </svg>
    </button>
  </div>
</div>